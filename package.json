{
  "name": "stylelint-plugin-isolate-on-stack",
  "version": "0.5.0",
  "description": "A Stylelint plugin to detect redundant or invalid uses of 'isolation: isolate' in CSS.",
  "keywords": [
    "stylelint-plugin",
    "css-stacking-context",
    "z-index-management",
    "isolation",
    "css-best-practices",
    "stylelint-rules",
    "layer-order",
    "css-performance"
  ],
  "homepage": "https://github.com/hiro0218/stylelint-plugin-isolate-on-stack#readme",
  "bugs": {
    "url": "https://github.com/hiro0218/stylelint-plugin-isolate-on-stack/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiro0218/stylelint-plugin-isolate-on-stack.git"
  },
  "license": "MIT",
  "author": "hiro0218",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:css": "stylelint example.css",
    "prepare": "husky && npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-value-parser": "^4.2.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.21.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "stylelint": ">=16.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
